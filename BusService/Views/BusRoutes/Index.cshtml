@model IEnumerable<BusService.Models.BusRoute>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<h4 class="alert-danger">@TempData["EmptyBusCode"]</h4>
<h4 class="alert-success">@TempData["SuccessBusRoute"]</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusRouteCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RouteName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusRouteCode)
            </td>
            <td>
                <a asp-action="Index" asp-controller="RouteStop"
                        asp-route-id="@item.BusRouteCode" 
                                asp-route-name="@item.RouteName">

                    @Html.DisplayFor(modelItem => item.RouteName)
                </a>
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BusRouteCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BusRouteCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BusRouteCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
